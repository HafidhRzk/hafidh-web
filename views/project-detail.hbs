<html>
  <head>
    <title>Project Detail</title>
    <link rel="stylesheet" href="/public/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
        crossorigin="anonymous"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body>
    <!--Navbar-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand me-5" href="#"><img src="/public/assets/logo.png" /></a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link active"
                  aria-current="page"
                  href="/add-project">Add My Project
                </a>
              </li>
            </ul>
            <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/login">Login</a>
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link active"
                      aria-current="page"
                      href="/register">Register
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="/contact" class="btn btn-dark">Contact Me</a>
                  </li>
                </ul>
          </div>
        </div>
    </nav>
    <!--Navbar-->
    <!--Project-->
    <div class="project-detail">
      <div class="project-detail-container">
        <h1 style="text-align:center;">{{project.title}}</h1>
        <div class="top-content">
          <div class="top-left">
            <img src="/public/assets/{{project.image}}" alt="detail" />
          </div>
          <div class="top-right">
            <h4>Duration</h4>
            <i class="fa-solid fa-calendar-days"> {{project.startDate}} - {{project.endDate}} | {{project.author.name}}</i><br>
            <i class="fa-solid fa-clock">{{project.post_at}}</i>
            <h4>Technologies</h4>
            <div class="project-detail-tech">
              <div class="project-detail-tech-left">
                <i class="{{project.reactJs}}"> React Js</i>
                <i class="{{project.nodeJs}}"> Node Js</i>
              </div>
              <div class="project-detail-tech-right">
                <i class="{{project.nextJs}}"> Next Js</i>
                <i class="{{project.textScript}}"> TextScript</i>
              </div>
            </div>
          </div>
        </div>
        <p>{{project.description}}</p>
      </div>
    </div>
    <!--Project-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">
    </script>
  </body>
</html>