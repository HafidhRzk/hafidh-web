<html>
    <head>
        <title>Update Project</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
        crossorigin="anonymous"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link href="/public/style.css" rel="stylesheet" />
    </head>
    <body style="font-family: futura md bt">
        <!--Navbar-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
              <a class="navbar-brand me-5" href="#"><img src="/public/assets/logo.png" /></a>
              <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link active"
                      aria-current="page"
                      href="/add-project">Add My Project
                    </a>
                  </li>
                </ul>
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/login">Login</a>
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link active"
                      aria-current="page"
                      href="/register">Register
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="/contact" class="btn btn-dark">Contact Me</a>
                  </li>
                </ul>
              </div>
            </div>
        </nav>
        <!--Navbar-->

        <!--Form Project-->
        <div class="container-main">
            <form action='/' method='post'
                  class="container mx-auto my-3"
                  style="width: 400px; font-family: futura md bt;">
                <h2 style="text-align:center; margin-bottom:30px;">UPDATE PROJECT</h2>
                <div class="mb-3">
                    <label for="input-project-title" class="form-label">Project Name</label>
                    <input type="text" 
                      class="form-control shadow" 
                      id="input-project-title" 
                      name="title" 
                      value="{{project.id.title}}">
                </div>
                <div class="d-flex">
                    <div class="mb-3 ">
                      <label for="start-date">Start Date</label>
                      <input type="date" 
                        id="start-date" 
                        class="form-control shadow" 
                        name="start_date" 
                        value="{{project.start_date}}"/>
                    </div>
                    <div class="mb-3">
                      <label for="end-date">End Date</label>
                      <input type="date" 
                        id="end-date" 
                        class="form-control shadow" 
                        name="end_date" 
                        value="{{project.end_date}}"/>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="input-project-content">Description</label>
                    <textarea id="input-project-content" 
                      class="form-control shadow" 
                      name="description" 
                      placeholder="{{project.description}}"></textarea>
                </div>
                <div>
                    <label>Technologies</label>
                    <div class="technologies d-flex mb-3">
                      <div class="Tech-Left">
                        <div class="NodeJS">
                          <input class="form-check-input" type="checkbox" id="node-js" name="techno" value="fa-brands fa-node-js"/>
                          <label for="node-js" value="{{project.nodeJs}}">Node Js</label>
                        </div>
                        <div class="ReactJS">
                          <input class="form-check-input" type="checkbox" id="react-js" name="techno" value="fa-brands fa-react"/>
                          <label for="react-js">React Js</label>
                        </div>
                      </div>
                      <div class="Tech-Right">
                        <div class="NextJS">
                          <input class="form-check-input" type="checkbox" id="next-js" name="techno" value="fa-solid fa-n"/>
                          <label for="next-js">Next Js</label>
                        </div>
                        <div class="TextScript">
                          <input class="form-check-input" type="checkbox" id="text-script" name="techno" value="fa-brands fa-js"/>
                          <label for="text-script">TextScript</label>
                        </div>
                      </div>
                    </div>
                </div>
                <div class="mb-3">
                    <img src="/public/assets/{{project.image}}" style="width: 10rem;" class="card-img-top px-3 py-3" alt=""/>
                    <label for="input-project-image" class="form-label">Upload Image</label>
                    <input class="form-control" type="file" id="input-project-image" name="image"/>
                </div>
                <div style="text-align: right;">
                    <button
                        style="
                            padding: 5px 30px; 
                            background-color: #111727; 
                            border: none; 
                            border-radius: 15px;
                            color: white;
                            font-size: 16px;">Update
                    </button>
                </div>                  
            </form>
        </div>
        <!--Form Project-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">
        </script>
        <script src="#"></script>
    </body>
</html>