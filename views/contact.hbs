<html>
    <head>
        <title>Contact</title>
        <link rel="stylesheet" href="/public/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
        crossorigin="anonymous"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
    </head>
    <body>
        <!--Navbar-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
              <a class="navbar-brand me-5" href="#"><img src="/public/assets/logo.png" /></a>
              <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link active" aria-current="page" href="/add-project">Add My Project</a>
                  </li>
                </ul>
                <ul class="navbar-nav">
                  {{#if isLogin}}
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="#">{{user.name}}</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="/logout">Logout</a>
                    </li>
                  {{else}}
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="/register">Register</a>
                    </li>
                  {{/if}}
                  <li class="nav-item">
                    <a href="/contact" class="btn btn-dark">Contact Me</a>
                  </li>
                </ul>
              </div>
            </div>
        </nav>
        <!--Navbar-->

        <!--Contact Form-->
        <div class="container-main">
            <form class="container mx-auto my-3" 
            style="width: 400px; font-family: futura md bt;">
                <h2 style="text-align:center">GET IN TOUCH</h2>
                <div class="mb-3">
                    <label for="input-name" class="form-label">Name</label>
                    <input type="text" class="form-control shadow" id="input-name">
                </div>
                <div class="mb-3">
                    <label for="input-email" class="form-label">Email</label>
                    <input type="email" class="form-control shadow" id="input-email">
                </div>
                <div class="mb-3">
                    <label for="input-phone" class="form-label">Phone Number</label>
                    <input type="text" class="form-control shadow" id="input-phone">
                </div>
                <div>
                    <label for="select-subject" class="form-label">Subject</label>
                    <select class="form-select mb-3" id="select-subject">
                        <option hidden></option>
                        <option>I'm Hiring</option>
                        <option>Let's Collaboration</option>
                        <option>Let's Talk</option>
                    </select>
                </div>
                <div class="form-floating mb-3">
                    <p><label for="input-message">Your Message</label></p>
                    <textarea class="form-control" id="input-message"></textarea>
                </div>
                <div style="text-align: right;">
                    <button 
                        type="button"
                        style="
                            padding: 5px 30px; 
                            background-color: #111727; 
                            border: none; 
                            border-radius: 15px;
                            color: white;
                            font-size: 16px;"
                        onclick="submitForm()" type="button">Submit
                    </button>
                </div>
            </form>
        </div>
        <!--Contact Form-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">
        </script>
        <script src="/public/index.js"></script>
    </body>
</html>